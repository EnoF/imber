{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./build/"
    },
    "filesGlob": [
        "./app/*.ts",
        "./app/core/**/*.ts",
        "./app/widgets/**/*.ts",
        "./test/*.ts",
        "./app/bower_components/type-def/angularjs/angular.d.ts",
        "./app/bower_components/type-def/angular-material/angular-material.d.ts",
        "./app/bower_components/type-def/node/node.d.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./app/app.ts",
        "./app/reference.ts",
        "./app/core/dao/dao.ts",
        "./app/core/dao/userDAO.ts",
        "./app/core/models/baseVM.ts",
        "./app/core/models/errors.ts",
        "./app/core/models/serializable.ts",
        "./app/core/models/session.ts",
        "./app/core/models/user.ts",
        "./app/core/modules/appConfig.ts",
        "./app/widgets/login/login.ts",
        "./app/widgets/login/src/loginForm.ts",
        "./app/widgets/login/src/loginVM.ts",
        "./app/widgets/login/src/translations/en.ts",
        "./app/widgets/login/test/unit/login.step.ts",
        "./test/angular-mocks.d.ts",
        "./test/context.ts",
        "./test/definitions.ts",
        "./test/globals.ts",
        "./app/bower_components/type-def/angularjs/angular.d.ts",
        "./app/bower_components/type-def/angular-material/angular-material.d.ts",
        "./app/bower_components/type-def/node/node.d.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "convertTabsToSpaces": true
    }
}
